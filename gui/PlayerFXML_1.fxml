                        <ToggleGroup fx:id="playerGender" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="playerFemale" mnemonicParsing="false" style="-fx-text-fill: khaki;" text="Female" toggleGroup="$playerGender" />
