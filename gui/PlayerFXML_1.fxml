                        <Image url="@../resources/diary_page_without_border_0.png" />
                     </image>
                     <viewport>
                        <Rectangle2D />
                     </viewport>
                  </ImageView>
                  <ImageView fx:id="fakeGameImage" fitHeight="370.0" fitWidth="346.0" pickOnBounds="true">
                     <viewport>
                        <Rectangle2D />
                     </viewport>
                  </ImageView>
               </children>
            </AnchorPane>
         </children>
