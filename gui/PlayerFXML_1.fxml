               <viewport>
                  <Rectangle2D />
               </viewport>
            </ImageView>
            <AnchorPane fx:id="mediaPane1" layoutY="115.0" prefHeight="350.0" prefWidth="200.0" visible="false">
               <children>
                  <ImageView fx:id="diaryPageImage" fitHeight="370.0" fitWidth="346.0" pickOnBounds="true">
